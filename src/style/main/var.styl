_text = #242424
_ltext = #d4d4d4
_grayLight = #fcf8f8
_main-theme = #ea7f8c
_yellow = #ffdd0c
_gradient = linear-gradient(to right, #15bc81, #bedf2d)


.btn
  display flex
  justify-content center
  align-items center
  border none
  background _gradient
  border-radius 10px
  color #fff
  text-align center
  width 300px
  padding 22px 15px
  box-sizing border-box
  font-weight 500
  text-transform uppercase
  box-shadow 0 0 40px 6px rgba(0, 0, 0, 0.3)
  &:hover
    //box-shadow none
    box-shadow inset 0 0 15px 3px rgba(0,0,0,.3)



