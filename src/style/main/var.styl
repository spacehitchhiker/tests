_text = #74757b
_ltext = #b2b3bc //bcbfce
_main-theme = #393e6b
_green = #0da088
_hover = #2cd3b8
_bg-hightlight = #eff4f4
_gray = #e1e2e9

_gradient = linear-gradient(to left, #32dfce, #4b9fb4)

.btn
  display block
  border none
  background _main-theme
  border-radius 30px
  color #fff
  text-align center
  width 300px
  padding 15px 7px
  box-sizing border-box
  font-weight 500
  text-decoration none
  text-transform uppercase
  &:hover
    background _hover


.btnBord
  display block
  background-color transparent
  border 1px solid _main-theme
  border-radius 30px
  color _main-theme
  text-align center
  width 300px
  padding 15px 7px
  box-sizing border-box
  font-weight 500
  text-decoration none
  text-transform uppercase
  &:hover
    border 1px solid _hover
    background _hover
    color #fff



