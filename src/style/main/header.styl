@import '/main/var.styl'

header
  display flex
  justify-content space-between
  align-items center
  text-transform uppercase
  font-weight 500
  font-size 1em
  box-shadow 1px 3px 18px rgba(0,0,0,0.2)
  padding 0px 70px 0px 0px
  position relative
  @media screen and (max-width 990px)
    padding 0 20px 0 0
  @media screen and (max-width 880px)
    padding 0 20px 0 20px
    justify-content center
  & .header-item
    padding 35px 70px
    display flex
    align-items center
    &:last-child
      padding 35px 0px
      @media screen and (max-width 990px)
        padding 20px 0px 20px 0px
    @media screen and (max-width 990px)
      padding 20px 40px 20px 20px
    &._none-mobile
      @media screen and (max-width 880px)
        display none
  & .sign-in
    margin-right 30px
    color _main-theme
  & .login
    color _main-theme
  & .header-btn
    display flex
    align-items center
    justify-content center
    background transparent
    border 0
    padding 0
    margin 0
    @media screen and (min-width 881px)
      display none
    & .burger-open
      display block
      fill _hover
      @media screen and (max-width 880px)
          width 44px
          height 38px
    & .burger-close
      display none
      fill _hover
      @media screen and (max-width 880px)
        width 44px
        height 38px
  & .nav
    @media screen and (max-width 880px)
      display none
    &__link
      color _main-theme
      margin-right 20px
      &:last-child
        margin-right 0
      &._show-mobile
        display none
        text-decoration underline
        @media screen and (max-width 880px)
          display block

  & .logo-box
    margin-left 30px
    width 114px
    @media screen and (max-width 880px)
      width 170px
    @media screen and (max-width 425px)
      width 150px
  & .active
    & .header-btn
      & .burger-open
        display none

      & .burger-close
        display block

    & .nav
      @media screen and (max-width 880px)
        display flex
        top 70px
        background #c9cad3
        //bottom 0
        flex-direction column
        align-items center
        position fixed
        left 0
        width 100%
        z-index 99999
        transition .6s
        box-shadow 1px 3px 18px rgba(39, 42, 81, 0.2)
        height calc(100vh - 70px)
        bottom 0
        padding 7px 5px 5px
        box-sizing border-box
      &__list
        @media screen and (max-width 880px)
          display flex
          flex-direction column
          align-items center
          padding 40px 0 10px
          background #fff
          width 100%
          box-sizing border-box
          flex-grow 1
          justify-content flex-start
          border-radius 4px
          overflow auto
          @media screen and (max-width 500px)
            padding 20px 0 10px
      &__link
        @media screen and (max-width 880px)
          margin-right 0
          margin-bottom 20px
