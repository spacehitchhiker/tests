@import "../main/var.styl"

.banner
  display flex
  flex-direction column
  align-items center
  background url("/img/center-img.png") no-repeat
  background-size cover
  color #fff
  padding 50px 0
  margin 70px 0 60px
  @media screen and (max-width 450px)
    padding 40px 0
    margin 50px 0 40px
  &__text
    max-width 853px
    margin 0 0 40px
    text-align center
    font-size 23px
    line-height 1.3em
    @media screen and (max-width 450px)
      font-size 20px
  &__link
    @extend .btn
    margin 0 auto
    width 400px
    flex-direction column
    align-items center
    text-align center
    font-size 23px
    @media screen and (max-width 450px)
      width 100%
      font-size 20px
    &-default
      text-transform none
      font-size 18px
      @media screen and (max-width 450px)
          font-size 16px

