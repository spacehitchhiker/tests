@import "../main/var.styl"


.feedback
  display flex
  justify-content space-between
  margin 40px 0 60px
  align-items flex-end
  @media screen and (max-width 1080px)
    position relative
  & .slick-dots
    position absolute
    bottom -70px
    transform rotate(-90deg)
    list-style-type none
    padding 0
    & li
      display flex
  &__item
    display flex !important
    flex-direction column
    @media screen and (max-width 1080px)
      align-items center
  &__text
    padding 20px
    border-radius 10px
    width 320px
    box-sizing border-box
    border 1px solid _ltext
    margin-bottom 44px
    position relative
    &:before
      content ''
      width 0
      height 0
      border 13px solid
      border-color _ltext transparent transparent _ltext
      position absolute
      left 40px
      bottom -27px
      @media screen and (max-width 1080px)
        left 127px
    &:after
      content ''
      width 0
      height 0
      border 13px solid
      border-color #fff transparent transparent #fff
      position absolute
      left 41px
      bottom -24px
      @media screen and (max-width 1080px)
        left 128px


  &__info
    display flex
    align-items center
    & .name
      text-transform uppercase
      font-size 16px
      font-weight 600
    & .age
      color _ltext
      font-size 12px
      margin-top 8px
  &__namebox
    margin-left 20px
  &__imgbox
    width 80px
    height 80px
    border-radius 50%
    overflow hidden
    position relative
    display flex
  &__img
    width 100%
    position absolute
    margin 0 auto
