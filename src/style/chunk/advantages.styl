@import "../main/var.styl"

.advantages
  display flex
  justify-content space-around
  margin 60px 0
  @media screen and (max-width 1000px)
    position relative
  & .slick-dots
    position absolute
    bottom -111px
    transform rotate(-90deg)
    list-style-type none
    & li
      display flex
  &__item
    display flex !important
    flex-direction column
    align-items center
    max-width 251px
    box-sizing border-box
    @media screen and (max-width 1000px)
      max-width none
    &-text
      text-align center
      margin 30px 8px 0
      text-transform uppercase
      font-size 16px
    & .icon-wrap
      width 111px
