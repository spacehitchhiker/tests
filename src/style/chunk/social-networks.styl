@import '/main/var.styl'

.social-networks
	display flex 
	flex-direction column 
	background #fff 
	border-radius 41px
	box-sizing border-box 
	padding 0px 71px 69px
	&__text
		margin 31px 0
		color _ltext
		font-size 13px
		line-height 16px
		letter-spacing 0.531818px
		text-align center
	&__btn 
		@extend .btn 
		background _gradient-blue
		padding 10px 20px 10px 95px
		position relative 
		display flex 
		align-items center
		margin-bottom 22px
		&:last-child 
			margin-bottom 0
		& svg 
			positon absolute
		&._bg-dark
			background _gradient-dark-blue 

