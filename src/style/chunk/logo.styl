@import '/main/var.styl'

.logo-wrap
  color _text
  display flex
  margin 50px 20px
  align-items center
  & .logo
    background _text
    width 82px
    height: 82px
    border-radius 50%
    position: relative
    display flex
    align-items center
    justify-content center
    &:before
      content ''
      width 0
      height 0
      border-style solid
      border-width 27px 45px 27px 33px
      border-color transparent #fff transparent transparent
      position absolute
      right -1px
      top 0
      bottom 0
      margin auto
      z-index 5

    &__center
      display flex
      background #fff
      width 49px
      height 49px
      border-radius 50%
      overflow hidden
      position relative
      z-index 10
      &:before
        content ''
        width 0
        height 0
        border-style solid
        border-width 19px 28px 19px 28px
        border-color transparent _main-theme transparent transparent
        position absolute
        right -3px
        top 0
        bottom 0
        z-index 15
        margin auto
  & .logo-text
    text-transform uppercase
    display flex
    flex-direction column
    margin-left 10px
    &__item
      display flex
      font-size 26px
      align-items center
      font-weight 600
      &-word
        color _main-theme
        font-size 24px
      &-phrase
        font-size 10px
        margin-left 7px
        font-weight 300










