@import '/main/var.styl'

.logo-wrap
  color _text
  display flex
  margin 50px 30px
  align-items center
  & .logo
    background _text
    width 82px
    height: 82px
    border-radius 50%
    position: relative
    display flex
    align-items center
    justify-content center
    &:before
      content ''
      width 0
      height 0
      border-style solid
      border-width 33px 33px 33px 33px
      border-color transparent #fff transparent transparent
      position absolute
      right 0
      top 0
      bottom 0
      margin auto
      z-index 5

    &__center
      display flex
      background #fff
      width 50px
      height 50px
      border-radius 50%
      overflow hidden
      position relative
      z-index 10
      &:before
        content ''
        width 0
        height 0
        border-style solid
        border-width 17px 30px 17px 30px
        border-color transparent _main-theme transparent transparent
        position absolute
        right -3px
        top 0
        bottom 0
        z-index 15
        margin auto
  & .logo-text
    text-transform uppercase
    display flex
    flex-direction column
    margin-left 15px
    &__item
      display flex
      font-size 30px
      align-items center
      &-word
        color _main-theme
      &-phrase
        font-size 11px
        margin-left 7px










