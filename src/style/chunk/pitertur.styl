@import '/main/var.styl'



.enter-page
	display flex
	justify-content space-between
	flex 1
	background _bg-image 
	background-size cover
	border-radius 43px
	@media screen and (max-width 767px)
		flex-direction column
		margin 30px 0
	&__content
		display flex 
		flex-grow 1
		flex-direction column 
		padding 0 30px 0 76px
		@media screen and (max-width 1000px)
			padding 0 30px 0 30px
		@media screen and (max-width 767px)
			align-items center
			padding 0 30px 30px 30px
		&:before
			content url('/img/shopping_bag.svg')
			margin 96px 28px 223px 0
			display flex 
			justify-content flex-end
			@media screen and (max-width 767px)
				display none
			
	&__title
		color #fff 
		font-weight bold
		font-size 52px
		line-height 63px
		letter-spacing 0.472727px
		text-align left 
		margin 25px 0
		@media screen and (max-width 767px)
			text-align center
			font-size 42px
			line-height 40px
			margin 30px 0 25px
	&__text
		font-size 24px
		line-height 29px
		letter-spacing 0.48px
		color #fff 
		margin 0
		@media screen and (max-width 767px)
			text-align center
		@media screen and (max-width 500px)
			font-size 20px
	&__form-box
		border-radius 43px
		background rgba(255, 255, 255, 0.48)
		padding-top 38px
		width 48%
		min-width 400px
		@media screen and (min-width 1025px)
			min-width 520px
		@media screen and (max-width 767px)
			width 100%
			min-width 280px
	&__wrap-form1
		border-radius 43px
		background rgba(255, 255, 255, 0.73)
		padding-top 38px
	&__wrap-form2
		border-radius 43px
		background #fff
		padding 87px 71px 69px
		@media screen and (max-width 1024px)
			padding 67px 41px 60px
		@media screen and (max-width 767px)
			padding 50px 20px 50px
		@media screen and (max-width 500px)
			padding 30px 11px 50px

				




